<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">8.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/music_seekbar_horizontal</item>
        <item name="android:minHeight">8.0dip</item>
        <item name="android:thumb">@drawable/icon_music_handle</item>
    </style>

    <style name="navos_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/font_middle_large_size</item>
        <item name="android:layout_marginBottom">@dimen/list_title_bottom_margin</item>
    </style>

    <style name="ListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:listSelector">@drawable/selector_listview</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="CharList">
        <item name="android:textSize">16sp</item>
        <item name="android:text">AIOS对话系统</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="IndexTextStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="tableColor" format="color"/>
        <attr name="tableWidth" format="integer"/>
        <attr name="tableCount" format="integer"/>
    </declare-styleable>
</resources>
